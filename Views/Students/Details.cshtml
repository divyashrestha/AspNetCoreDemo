@model AspNetCoreDemo.Models.Student

<h2>Student Details</h2>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Age:</strong> @Model.Age</li>
    <li><strong>Email:</strong> @Model.Email</li>
    <li><strong>Enrollment:</strong> @Model.EnrollmentDate.ToShortDateString()</li>
    <li><strong>Created:</strong> @Model.CreatedAt.ToShortDateString()</li>
    <li><strong>Updated:</strong> @Model.UpdatedAt.ToShortDateString()</li>
</ul>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
